<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true"
    android:background="@color/dategray1" >

    <ScrollView
        android:id="@+id/scrollViewCreateField"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/LinearLayoutCreateField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/tableLayoutCreateField"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:stretchColumns="*"
                android:textColor="@color/normaltextcolor" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <View
                        android:layout_width="10dip"
                        android:layout_height="2dip"
                       
                        android:background="@color/black" >
                    </View>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/staticfieldheight"
                        
                        android:background="@color/menubackground"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:singleLine="true"
                        android:text="Create Field"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sptextsize" >
                    </TextView>
                </TableRow>

                
				
                

                
				<TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="5dip"
                        
                        >
                    </View>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        
                        android:gravity="left|center_vertical"
                        android:paddingLeft="3dp"
                        android:singleLine="false"
                        android:text="Farm Name:"
                         android:textColor="@color/gray"
                        android:textSize="16sp" >
                    </TextView>
				  </TableRow>
				    <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp" >
                
                    <Spinner
                        android:id="@+id/spinnerCreateFieldFarmName"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        
                       
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text=""
                        android:textColor="@color/normaltextcolor"
                        android:textSize="18sp" >
                    </Spinner>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        
                        >
                    </View>
                </TableRow>
                
                
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp" >

                    <TextView
                        
                        android:layout_height="40dp"
                        android:layout_width="wrap_content"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="3dp"
                        android:singleLine="false"
                        android:text="Field Name:"
                        android:textColor="@color/gray"
                        android:textSize="16sp" >
                    </TextView>
 					</TableRow>
 					 <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp" >
                    <EditText
                        android:id="@+id/editTextCreateFieldFieldName"
                      android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text=""
                        android:textColor="@color/normaltextcolor"
                        android:textSize="18sp" >
                    </EditText>
                </TableRow>
                 
                
                 <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="5dip"
                        
                        >
                    </View>
                </TableRow>
               
                 <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp" >
                    <Button
                        android:id="@+id/buttonCreateFieldSaveField"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        
                        
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="Save Field"
                        android:textColor="@android:color/white"
                       android:background="@color/menubackground"
                        android:textSize="18sp" >
                    </Button>
                </TableRow>
                 <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="10dip"
                        
                        >
                    </View>
                </TableRow>
               
               
                
                
                </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
